{
  "name": "spi-node",
  "version": "3.0.1",
  "description": "Communicate with devices using SPI directly from Node.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "build": "rm -rf dist && tsc -p src",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build",
    "install": "node-gyp rebuild",
    "lint": "eslint src/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexeden/spi-node.git"
  },
  "author": "Alex Eden",
  "license": "MITNFA",
  "bugs": {
    "url": "https://github.com/alexeden/spi-node/issues"
  },
  "homepage": "https://github.com/alexeden/spi-node#readme",
  "keywords": [
    "dotstar",
    "iot",
    "mcp3008",
    "n-api",
    "napi",
    "pi",
    "raspberry",
    "rpi",
    "sensors",
    "serial",
    "spi"
  ],
  "dependencies": {
    "bindings": "^1.5.0",
    "node-addon-api": "^3.1.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.22",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  }
}
